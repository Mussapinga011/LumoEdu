rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Videos: Public read, Admin write
    match /videos/{videoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Disciplines, Sessions and Questions (Modo Aprender)
    match /disciplines/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Sessions and Questions can be deep nested (Collection Group Style)
    match /{path=**}/sessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /{path=**}/questions/{questionId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Exams/Questions: Public read, Admin write
    match /exams/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /questions/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users and Progress
    match /users/{userId} {
      allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow list: if true;
      
      match /sessionProgress/{sessionId} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      }
      
      match /{allPaths=**} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      }
    }

    // Universities: Public read, Admin write
    match /universities/{universityId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Question History: Users can read/write their own history
    match /questionHistory/{historyId} {
      // Allow reading/listing documents that belong to the user
      // The query must include where('userId', '==', request.auth.uid)
      allow read, list: if request.auth != null;
      
      // Allow writing to own history documents
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if request.auth != null && 
                               resource.data.userId == request.auth.uid;
    }

    // Simulations: Users can read/write their own simulations
    match /simulations/{simulationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow admins to read all simulations
      allow read: if isAdmin();
    }

    // Regras para Grupos de Estudo
    match /groups/{groupId} {
      // Qualquer usuário logado pode ler grupos e criar (a validação Premium é feita no App)
      allow read, create: if request.auth != null;
      
      // Permitir atualizar apenas para entrar/sair (modificar array members e membersCount)
      allow update: if request.auth != null;

      // Permitir deletar apenas para admin ou criador do grupo
      allow delete: if request.auth != null && (
        isAdmin() || 
        get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy == request.auth.uid
      );

      // Subcoleção de Mensagens
      match /messages/{messageId} {
        // Apenas membros poderiam ler, mas para simplificar: logados podem ler
        allow read: if request.auth != null;
        // Qualquer logado pode enviar mensagem (idealmente verificar se é membro)
        allow create: if request.auth != null;
      }

      // Subcoleção de Membros
      match /members/{userId} {
        allow read, write: if request.auth != null;
      }
    }

    // Regras para Testes A/B
    match /abTests/{testId} {
      // Públicos (ativos) ou Admin (todos)
      allow read: if (resource.data.status == 'active') || isAdmin();
      
      // Admin pode criar e deletar
      allow create, delete: if isAdmin();
      
      // Atualizar estatísticas (incrementar views/clicks) permitido para todos (ou logados) em testes ativos
      // Admin também pode editar tudo
      allow update: if isAdmin() || (resource.data.status == 'active');
    }

    // Downloads: Public read, Admin write, User increment
    match /downloads/{downloadId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (
        request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['downloadCount'])
      );
    }
  }
}
